@import '../../styles/var.styl'

border-bottom()
  position: relative

  &::after
    content: ''
    position: absolute
    width: 100%
    bottom: 0
    left: 0
    height: 1px
    transform: scaleY(0.5)
    background-color: $border-color

.blog-card
  padding: 20px

  &:not(:last-child)
    border-bottom: 1px solid $theme-color

// 卡片头部部分
.blog-card-header
  padding-bottom: 20px
  border-bottom()

.blog-card-header-title
  font-size: 20px
  font-weight: 500
  margin-bottom: 5px

  a
    color: $word-color

    &:hover
      color: $theme-color

.blog-card-header-extra
  display: flex
  align-items: center
  flex-wrap: wrap
  font-size: 12px
  color: $word-tips-color

  span
    &:not(:last-child)
      margin-right: 20px

// 卡片主体部分
.blog-card-content
  padding: 20px 0
  border-bottom()

.blog-card-content-img
  float: left
  width: 300px
  margin-right: 10px

.blog-card-content-desc
  padding: 0
  overflow: visible

.blog-card-footer
  padding-top: 20px