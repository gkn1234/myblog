@import '../../styles/var.styl'

.post-card
  display: flex
  background-color: $card-color
  position: relative
  padding: 10px

  &.reversed-background
    background-color: $background-color

  &:not(:last-child)
    border-bottom: 1px solid $border-color

.post-card-wrapper
  flex-grow: 1
  margin-left: 10px

.post-card-header
  display: flex
  justify-content: space-between
  align-items: center
  font-size: 14px

  .user-name
    font-size: 16px
    color: $theme-color
    font-weight: 700
  
  .reply-link
    color: $theme-color
  
  .tips
    color: $word-tips-color
    margin-left: 10px
  

.post-card-content
  font-size: 14px